{
  "resources": [
    {
      "name": "belvedere-managed-zone",
      "type": "dns.v1.managedZone",
      "properties": {
        "description": "Belvedere managed zone for cornbread.club",
        "dnsName": "cornbread.club",
        "name": "belvedere"
      }
    },
    {
      "name": "belvedere-deny-ssh",
      "type": "compute.v1.firewall",
      "properties": {
        "denied": [
          {
            "IPProtocol": "TCP",
            "ports": [
              "22"
            ]
          }
        ],
        "description": "Deny all SSH to Belvedere apps by default",
        "direction": "INGRESS",
        "priority": 65533,
        "sourceRanges": [
          "0.0.0.0/0"
        ],
        "targetTags": [
          "belvedere"
        ]
      }
    },
    {
      "name": "belvedere-allow-iap-tunneling",
      "type": "compute.v1.firewall",
      "properties": {
        "allowed": [
          {
            "IPProtocol": "TCP",
            "ports": [
              "0-65535"
            ]
          }
        ],
        "description": "Allow IAP tunneling to Belvedere apps",
        "direction": "INGRESS",
        "priority": 65532,
        "sourceRanges": [
          "35.235.240.0/20"
        ],
        "targetTags": [
          "belvedere"
        ]
      }
    },
    {
      "name": "belvedere-waf",
      "type": "compute.v1.securityPolicy",
      "properties": {
        "description": "Common WAF rules for Belvedere apps.",
        "rules": [
          {
            "action": "deny-404",
            "description": "Deny external access to healthchecks.",
            "match": {
              "expr": {
                "expression": "request.path.matches('^/healthz/')"
              }
            },
            "priority": 100
          },
          {
            "action": "allow",
            "description": "Allow all access by default.",
            "match": {
              "config": {
                "srcIpRanges": [
                  "*"
                ]
              },
              "versionedExpr": "SRC_IPS_V1"
            },
            "priority": 2147483647
          }
        ]
      }
    }
  ]
}