{
  "resources": [
    {
      "name": "belvedere-allow-my-app-lb",
      "type": "compute.v1.firewall",
      "properties": {
        "allowed": [
          {
            "IPProtocol": "TCP",
            "ports": [
              "8443"
            ]
          }
        ],
        "sourceRanges": [
          "130.211.0.0/22",
          "35.191.0.0/16"
        ],
        "targetTags": [
          "belvedere-my-app"
        ]
      }
    },
    {
      "name": "my-app-hc",
      "type": "compute.v1.healthCheck",
      "properties": {
        "http2HealthCheck": {
          "portName": "svc-https",
          "requestPath": "/healthz"
        },
        "type": "HTTP2"
      }
    },
    {
      "name": "my-app-bes",
      "type": "compute.v1.backendService",
      "properties": {
        "cdnPolicy": {
          "signedUrlCacheMaxAgeSec": "200"
        },
        "connectionDraining": {
          "drainingTimeoutSec": 60
        },
        "enableCDN": true,
        "healthChecks": [
          "$(ref.my-app-hc.selfLink)"
        ],
        "iap": {
          "enabled": true,
          "oauth2ClientId": "hello",
          "oauth2ClientSecret": "world"
        },
        "logConfig": {
          "enable": true
        },
        "portName": "svc-https",
        "protocol": "HTTP2",
        "securityPolicy": "$(ref.my-app-waf.selfLink)",
        "sessionAffinity": "NONE"
      }
    },
    {
      "name": "my-app-urlmap",
      "type": "compute.v1.urlMap",
      "properties": {
        "defaultService": "$(ref.my-app-bes.selfLink)"
      }
    },
    {
      "name": "my-app-cert",
      "type": "compute.v1.sslCertificate",
      "properties": {
        "managed": {
          "domains": [
            "my-app.horse.club"
          ]
        },
        "type": "MANAGED"
      }
    },
    {
      "name": "my-app-tp",
      "type": "compute.v1.targetHttpsProxy",
      "properties": {
        "quicOverride": "ENABLE",
        "sslCertificates": [
          "$(ref.my-app-cert.selfLink)"
        ],
        "urlMap": "$(ref.my-app-urlmap.selfLink)"
      }
    },
    {
      "name": "my-app-fr",
      "type": "compute.v1.globalForwardingRule",
      "properties": {
        "IPProtocol": "TCP",
        "portRange": "443",
        "target": "$(ref.my-app-tp.selfLink)"
      }
    },
    {
      "name": "my-app-sa",
      "type": "iam.v1.serviceAccount",
      "properties": {
        "accountId": "app-my-app",
        "displayName": "my-app"
      }
    },
    {
      "name": "my-app-rrs",
      "type": "gcp-types/dns-v1:resourceRecordSets",
      "properties": {
        "name": "my-app.horse.club",
        "managedZone": "belvedere",
        "records": [
          {
            "rrdatas": [
              "$(ref.my-app-fr.IPAddress)"
            ],
            "ttl": 50,
            "type": "A"
          }
        ]
      }
    },
    {
      "name": "my-app-waf",
      "type": "compute.v1.securityPolicy",
      "properties": {
        "description": "WAF rules for Belvedere app my-app.",
        "rules": [
          {
            "action": "deny(403)",
            "description": "Prevent XSS attacks.",
            "match": {
              "expr": {
                "expression": "evaluatePreconfiguredExpr('xss-stable')"
              }
            },
            "priority": 1
          },
          {
            "action": "deny(404)",
            "description": "Deny external access to healthchecks.",
            "match": {
              "expr": {
                "expression": "request.path.matches('^/healthz')"
              }
            },
            "priority": 1
          },
          {
            "action": "allow",
            "description": "Allow all access by default.",
            "match": {
              "config": {
                "srcIpRanges": [
                  "*"
                ]
              },
              "versionedExpr": "SRC_IPS_V1"
            },
            "priority": 2147483647
          }
        ]
      }
    },
    {
      "name": "my-app-sa-roles/clouddebugger.agent",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/clouddebugger.agent",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/cloudprofiler.agent",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/cloudprofiler.agent",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/cloudtrace.agent",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/cloudtrace.agent",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/errorreporting.writer",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/errorreporting.writer",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/logging.logWriter",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/logging.logWriter",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/monitoring.metricWriter",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/monitoring.metricWriter",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/stackdriver.resourceMetadata.writer",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/stackdriver.resourceMetadata.writer",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/storage.objectViewer",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/storage.objectViewer",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    },
    {
      "name": "my-app-sa-roles/dogWalker.dog",
      "type": "gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding",
      "properties": {
        "resource": "my-project",
        "role": "roles/dogWalker.dog",
        "member": "serviceAccount:$(ref.my-app-sa.email)"
      }
    }
  ]
}